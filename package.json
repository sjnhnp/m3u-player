{
  "name": "m3u-player",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//": "Run dev server targeting frontend config",
    "dev": "vite --config frontend/vite.config.js",
    "//": "Build the frontend project using its specific config",
    "build": "vite build --config frontend/vite.config.js",
    "//": "Preview the built frontend project",
    "preview": "vite preview --config frontend/vite.config.js",
    "//": "Linting and formatting commands likely need adjustment if run from root",
    "//": "Example: Run eslint inside the frontend directory",
    "lint": "eslint frontend/src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx,css,md}\""
  },
  "dependencies": {
    "axios": "^1.4.0",
    "hls.js": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.0",
    "vite": "^4.3.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module"
}
